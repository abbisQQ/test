<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.abbisqq.aquaworld.fragments.FishDetailsFragment"

        >


        <ImageView
            android:id="@+id/fish_main_image"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_image"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cichlid" />

        <ImageButton
            android:id="@+id/measure_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/fish_main_image"
            app:layout_constraintRight_toRightOf="@+id/fish_main_image"
            app:layout_constraintTop_toBottomOf="@+id/fish_main_image"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/measure" />

        <TextView
            android:id="@+id/sciName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/main_background"
            android:elevation="5dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:inputType="none"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size"
            app:layout_constraintLeft_toLeftOf="@+id/measure_button"
            app:layout_constraintRight_toRightOf="@+id/measure_button"
            app:layout_constraintTop_toBottomOf="@+id/measure_button"
            tools:text="babis" />


        <TextView
            android:id="@+id/common_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/main_background"
            android:elevation="5dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="start"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size"
            app:layout_constraintLeft_toLeftOf="@+id/measure_button"
            app:layout_constraintRight_toRightOf="@+id/measure_button"
            app:layout_constraintTop_toBottomOf="@+id/sciName_tv"
            tools:targetApi="lollipop"
            tools:text="babis" />

        <ImageButton
            android:id="@+id/ph_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="40dp"
            android:background="@color/main_background"
            android:elevation="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/common_name_tv"
            app:srcCompat="@mipmap/ph_final" />

        <ImageButton
            android:id="@+id/diet_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="40dp"
            android:background="@color/main_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ph_button"
            app:srcCompat="@mipmap/feed_final"
            android:elevation="5dp"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageButton
            android:id="@+id/water_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="40dp"
            android:background="@color/main_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/diet_button"
            app:srcCompat="@mipmap/water_final"
            android:elevation="5dp"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageButton
            android:id="@+id/breeding_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="40dp"
            android:background="@color/main_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/water_button"
            app:srcCompat="@mipmap/breeding_final"
            android:elevation="5dp"
            app:layout_constraintRight_toRightOf="parent" />


        <ImageButton
            android:id="@+id/temperature_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="40dp"
            android:background="@color/main_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/breeding_button"
            app:srcCompat="@mipmap/temperature_final"
            android:elevation="5dp"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageButton
            android:id="@+id/aggression_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="40dp"
            android:background="@color/main_background"
            android:elevation="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/temperature_button"
            app:srcCompat="@mipmap/aggressive_final" />


        <TextView
            android:id="@+id/overview_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@color/main_background"
            android:elevation="5dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="start"
            android:padding="5dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size"
            app:layout_constraintLeft_toLeftOf="@+id/temperature_button"
            app:layout_constraintRight_toRightOf="@+id/temperature_button"
            app:layout_constraintTop_toTopOf="@+id/aggression_button"
            tools:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa" />


        <TextView
            android:id="@+id/difficult_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:padding="15dp"
            android:background="@color/main_background"
            android:elevation="5dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="start"
            tools:text="I am the difficult"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/overview_tv"
            app:layout_constraintRight_toRightOf="parent"

            />


    </android.support.constraint.ConstraintLayout>
</ScrollView>